.header
  width 100%
  height 75px
  overflow hidden
  position fixed
  display flex
  flex-direction column
  justify-content center
  top 0
  left 0
  z-index 999
  font-weight bold
  background-color #ffffff
  box-shadow 0 4px 4px 0 rgba(0, 0, 0, 0.24), 0 0 4px 0 rgba(0, 0, 0, 0.12)

  transition: height 0.2s ease-in-out;

  &__wrapper
    display flex
    justify-content space-around

  &__logo
    margin 0
    padding 10px 0

  &__items
    list-style none
    margin 0
    padding 10px 0

  &__item
    display inline-block
    padding 0 32px
    a
      font-size 13px
      text-decoration none
      color #303f9f


    &:last-child
      margin 0
      border-radius 4px
      border 1px solid #ff9800
      padding 10px 72px
      cursor pointer
      a
        width 100%
        display block
        color #ff9800

  &__burger-button
    width 42px
    height 42px
    background url('../img/header/menu-icon.png') center center
    background-size cover
    display none
    cursor pointer

  &__open-menu
    width 100%
    height 100%
    top 0
    position fixed
    background-color #000
    display none
    z-index 300

+below(1190px)
  .header
    &__item
      padding 0 18px

+below(1080px)
  .header
    &__menu
      position fixed
      top 0
      left -200px
      height 100%
      overflow hidden
      background #fff
      transition left .3s ease-in-out
      z-index 400
    &__item
      display block
      padding 20px
      &:last-child
        padding 20px
        border none

    &__burger-button
      display block

  .open
    left 0
  .open-menu
    display block
    opacity 0.6

+below(640px)
  .header
    &__button
      display none
